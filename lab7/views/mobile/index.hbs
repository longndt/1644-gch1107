<a class="btn btn-info" href="/mobile/add">Add new mobile</a>
<a class="btn btn-primary" href="/mobile/sort/asc">Sort ASC</a>
<a class="btn btn-secondary" href="/mobile/sort/desc">Sort DESC</a>
<br><br>
<form class="col-md-4" action="/mobile/search" method="post">
   <input class="form-control" type="search" name="keyword" id="" required placeholder="Search by mobile model">
</form>
<br><br>
<table class="table table-primary">
   <tr>
      <th>Mobile model</th>
      <th>Mobile color</th>
      <th>Mobile brand</th>
      <th>Mobile image</th>
      <th colspan="2">Menu</th>
   </tr>
   {{#each mobiles }}
   <tr>
      <td>{{ model }}</td>
      <td>{{ color }}</td>
      <td>{{ brand.name }}</td>
      <td>
         <img src="{{ image }}" alt="" width="100" height="120">
      </td>
      <td>
         <a class="btn btn-warning" href="/mobile/edit/{{ _id }}">Edit</a>
      </td>
      <td>
         <a class="btn btn-danger" href="/mobile/delete/{{ _id }}" onclick="return confirm('Are you sure to delete this mobile ?');">Delete</a>
      </td>
   </tr>
   {{/each}}
</table>